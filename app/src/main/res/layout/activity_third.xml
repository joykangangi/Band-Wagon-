<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/cardview_dark_background"
    tools:context=".thirdActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/sautisol"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/a_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/imageView"
        android:gravity="center"
        android:text="@string/band_name"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/a_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a_title"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/imageView"
        android:text="@string/afro"
        android:textColor="#FFC107"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/a_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@id/a_description"
        android:gravity="center"
        android:text="@string/sauti_price"
        android:textColor="#E91E63"
        android:textSize="26sp" />


</RelativeLayout>